<bench-config>
    <master
            bindAddress="${127.0.0.1:master.address}"
            port="${2103:master.port}"/>
    <benchmark
            initSize="1"
            maxSize="1"
            increment="1">

        <DestroyWrapper
                runOnAllSlaves="true"/>
        <StartCluster
                staggerSlaveStartup="false"
                delayAfterFirstSlaveStarts="5000"
                delayBetweenStartingSlaves="1000"/>
        <ClusterValidation
                passiveReplication="false"
                partialReplication="false"/>
        <TpccPopulation
                preloadedFromDB="false"
                numWarehouses="1"
                cLastMask="0"
                olIdMask="0"
                cIdMask="0"
                threadParallelLoad="true"
                batchLevel="50"
                numLoaderThreads="2"
                oneWarmup="true"/>
        <GarbageCollection/>
        <!--GC only here because eraseNewKeys already includes a gc phase-->
        <ResetStats/>
        <CacheSize
                statName="CACHE_SIZE_BEFORE_BENCH"/>
        <TpccBenchmark
                statsSamplingInterval="30000"
                numOfThreads="1"
                perThreadSimulTime="60"
                accessSameWarehouse="false"
                paymentWeight="43"
                orderStatusWeight="53"
                retryOnAbort="true"
                backOffTime="0"
                perThreadTrackNewKeys="true" >
            <Trace
                    rateDistribution="exponential"
                    granularity="1"
                    initTime="0"
                    file="trace.log"
                    maxArrivalRate="3000" />
            <!--Sin
                    rateDistribution="exponential"
                    granularity="2"
                    initTime="1"
                    amplitude="1000"
                    maxArrivalRate="3000" /-->
            <!--Ramp
                    rateDistribution="exponential"
                    granularity="2"
                    initTime="1"
                    slope="1"
                    yintercept="0"
                    maxArrivalRate="3000" /-->
        </TpccBenchmark>
        <TpccCsvReportGeneration/>

    </benchmark>
    <products>
        <infinispan4>
            <config name="provaPC.xml"/>
        </infinispan4>
    </products>
    <reports>
        <report enabled="false" name="Reports"/>
    </reports>
</bench-config>
